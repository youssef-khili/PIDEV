{% block body %}
    <h1 align ="center" style="color:green;">Liste des d'abonnement</h1><hr>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h1 align="center" style="color:blue;">Abonnements</h1>

                        </div>
                            <style>
                                #customers {
                                    font-family: Arial, Helvetica, sans-serif;
                                    border-collapse: collapse;
                                    width: 20%;
                                }
                                #customers td, #customers th {
                                    border: 1px solid #ddd;
                                    padding: -1px;
                                }
                                #customers tr:nth-child(even){background-color: #f2f2f2;}
                                #customers tr:hover {background-color: #ddd;}
                                #customers th {
                                    padding-top: -1px;
                                    padding-bottom: -1px;
                                    text-align: left;
                                    background-color: royalblue;
                                    color: white;
                                }
                            </style>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <table class="table table-striped table-bordered" id="customers" >
        <thead>
        <tr class="w3-light-grey w3-hover-red">
        <th>id abonnement</th>
        <th>prix abonnement</th>
        <th>Date Debut abonnement</th>
        <th>Date Fin abonnement</th>
        <th>Remise abonnement</th>
        <th>Delete</th>
        <th>Update</th>
      </tr>
     
        </thead>
        <tbody>
         <tr {% for a in abonnements%}>
        <td> {{ a.id }} </td>
        <td> {{ a.prixAbonnement }} </td>
        <td> {{ a.dateDebut.format('d/m/Y') }} </td>
        <td> {{ a.dateFin.format('d/m/Y') }} </td>
        <td> {{ a.Remise }} </td>
        <td> <a href="{{ path('d',{'id':a.id}) }}"> Delete </a></td>
        <td> <a href="{{ path('update',{'id':a.id}) }}"> Update </a></td>
      </tr {% endfor %}>

        </tbody>
    </table>


{% endblock %}