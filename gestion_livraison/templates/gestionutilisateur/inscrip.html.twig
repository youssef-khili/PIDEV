{% extends 'front.html.twig' %}

{% block body %}
    <link href="{{ asset ('bundle2/css/styleee.css')}}">


    <h1>S'inscrire</h1>
    {# {{ form(form) }} #}
    {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}

    <table>

        <tr>
            <td>{{ form_label(form.nomUser) }}</td>
            <td>{{ form_widget(form.nomUser) }}</td>
            <td>{{ form_errors(form.nomUser) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.prenomUser) }}</td>
            <td>{{ form_widget(form.prenomUser) }}</td>
            <td>{{ form_errors(form.prenomUser) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.email) }}</td>
            <td>{{ form_widget(form.email) }}</td>
            <td>{{ form_errors(form.email) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.numTel) }}</td>
            <td>{{ form_widget(form.numTel) }}</td>
            <td>{{ form_errors(form.numTel) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.username) }}</td>
            <td>{{ form_widget(form.username) }}</td>
            <td>{{ form_errors(form.username) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.password) }}</td>
            <td>{{ form_widget(form.password) }}</td>
            <td>{{ form_errors(form.password) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.depart) }}</td>
            <td>{{ form_widget(form.depart) }}</td>
            <td>{{ form_errors(form.depart) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.destination ) }}</td>
            <td>{{ form_widget(form.destination ) }}</td>
            <td>{{ form_errors(form.destination ) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.cout) }}</td>
            <td>{{ form_widget(form.cout) }}</td>
            <td>{{ form_errors(form.cout) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.typeService) }}</td>
            <td>{{ form_widget(form.typeService) }}</td>
            <td>{{ form_errors(form.typeService) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.role) }}</td>
            <td>{{ form_widget(form.role) }}</td>
            <td>{{ form_errors(form.role) }}</td>
        </tr>
        <tr>
            <td> {{ form_label(form.captchaCode,"Are you a robot?") }}</td>
            <td> {{ form_widget(form.captchaCode,{'attr': {'class': 'form-control'}})}}</td>
            <td>{{ form_errors(form.captchaCode) }}</td>

        </tr>

    </table>




    {{ form_end(form) }}
    {% set flashbag_notices = app.session.flashbag.get('notice')%}
    {% if flashbag_notices is not empty %}
        <ul class="msg">
            {% for notice in flashbag_notices %}
                <li>{{ notice }}</li>
            {% endfor %}
        </ul>
    {% endif %}
    <a class="btn btn-primary btn-xl text-uppercase" href="http://127.0.0.1:8000/login">Login</a>
{% endblock %}


